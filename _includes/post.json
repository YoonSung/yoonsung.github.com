{% if post.type == "Tags" and post.publish == true %}
{
  "title"    : "{{ post.title }}",
  "description" : "{{ post.description }}",
  "tags"     : [{% for tag in post.tags %}"{{ tag }}",{% endfor %} null],
  "url"     : "{{ post.url }}",
  "date"     : {
    "day"   : "{{ post.date | date: "%d" }}",
    "month" : "{{ post.date | date: "%m" }}",
    "year"  : "{{ post.date | date: "%Y" }}"
  }
}
{% endif %}